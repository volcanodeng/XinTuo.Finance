
@{ 
    Style.Require("MainSty").AtHead();

    Script.Require("Subject.App").AtHead();
}

<style>
    li{
        list-style:none;
        line-height:30px;
    }
    div.lab
    {
        display:inline-block;
        padding-right:20px;
    }
    div.ctl
    {
        display:inline-block;
    }
</style>
<div class="easyui-tabs" id="categoryTab" data-options="plain:true,onSelect:onTabSelected" style="width:700px;height:550px">
    @foreach (XinTuo.Finance.Models.MSubjectCategory sc in Model.GenCategory)
    {
        string divName = "c" + sc.SubjectCategory.ToString();
        string tableName = "t" + sc.SubjectCategory.ToString();
        string toolbarId = "tb" + sc.SubjectCategory.ToString();
    <text>
    <div title="@sc.CategoryShortName" id="@divName" data-options="closable:false" style="padding:10px;">
        <table class="easyui-datagrid" id="@tableName" style="width:auto;height:auto;"
               data-options="fitColumns:true,singleSelect:true,toolbar: '#@toolbarId',fit:true,idField:'subjectCode'">
            <thead>
                <tr>
                    <th data-options="field:'subjectCode',width:40,align:'center'">@T("编码")</th>
                    <th data-options="field:'subjectName',width:80,align:'center'">@T("名称")</th>
                    <th data-options="field:'subjectCategory',width:40,align:'center',
                        formatter: function(value,row,index){
                            return row.category.categoryFullName;
                        }">@T("类别")</th>
                    <th data-options="field:'balanceDirection',width:40,align:'center'">@T("余额方向")</th>
                    <th data-options="field:'subjectState',width:30,align:'center',formatter: function(value,row,index){if(value==1) return '正常'; else return '停用';}">@T("状态")</th>
                </tr>
            </thead>
        </table>
    </div>
    <div id="@toolbarId" style="height:auto">
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true" onclick="append(@sc.SubjectCategory)">新增</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true" onclick="getChanges(@sc.SubjectCategory)">编辑</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true" onclick="removeit(@sc.SubjectCategory)">删除</a>
    </div>
    </text>
    
    }
</div>

<div id="subjectDetail" class="easyui-dialog" title="编辑科目" style="width:500px;height:700px;" 
     data-options="resizable:false,modal:true,closed: true">
        <ul>
            <li>
                <div class="lab">科目代码</div>
                <div class="ctl"><input class="easyui-textbox" data-options="required:true" style="width:200px"></div>
            </li>
            <li>
                <div class="lab">科目名称</div>
                <div class="ctl"><input class="easyui-textbox" data-options="required:true" style="width:200px"></div>
            </li>
            <li>
                <div class="lab">上级科目</div>
                <div class="ctl"><input class="easyui-textbox" data-options="required:true" style="width:200px"></div>
            </li>
            <li>
                <div class="lab">科目类别</div>
                <div class="ctl"><input id="category" class="easyui-combobox"  data-options="valueField:'subjectCategory',textField:'categoryFullName',url:'/api/s/GetSelectableCategory',width:200"></div>
            </li>
            <li>
                <div class="lab">余额方向</div>
                <div class="ctl">
                    <input type="radio" name="dir" value="借" />借
                    <input type="radio" name="dir" value="贷" />贷
                </div>
            </li>
        </ul>
</div>
